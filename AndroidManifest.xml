<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vivianhhuang.briefly"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vivianhhuang.briefly.TimerActivity"
            android:label="@string/title"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.vivianhhuang.briefly.GroupActivity"
            android:label="@string/title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.vivianhhuang.briefly.EditGroupActivity"
            android:label="@string/title"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.vivianhhuang.briefly.AddPersonActivity"
            android:label="@string/add_contact"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.vivianhhuang.briefly.DeleteGroupActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            android:label="@string/confirm_delete" >
        </activity>
        <activity android:name="com.vivianhhuang.briefly.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
